@model NewsWeb.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản lý quyền truy cập</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa quyền truy cập</li>
    </ol>
    <h6 class="slim-pagetitle">Xóa quyền truy cập</h6>
</div>
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class=" row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="RoleId" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="RoleName" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Mô tả:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="RoleDescription" class="form-control" type="text" />
            </div>
        </div>
    </div>
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.RoleId">
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-success bd-0">Trở về danh sách</a>
        </form>
    </div>
</div>


