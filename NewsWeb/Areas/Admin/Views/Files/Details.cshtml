@model NewsWeb.Models.File

@{
    ViewData["Title"] = "Thông tin thư mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Files" asp-action="Index">Danh sách thư mục</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thông tin thư mục</li>
    </ol>
    <h6 class="slim-pagetitle">Thông tin thư mục</h6>
</div>
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class=" row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="FileId" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên thư mục:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="FileName" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tiêu đề:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Alias:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Alias" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                MetaDesc:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="MetaDe" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                MetaKey:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="MetaKey" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Trạng thái:
            </div>
            <div class="col-7 col-sm-8">
                @if (Model.Published == true)
                {
                    <span class="badge badge-primary">Public</span>
                }
                else
                {
                    <span class="badge badge-primary">NON-Public</span>
                }
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Ordering:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Ordering" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Parents:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Parents" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Levels:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Levels" class="form-control" type="text" />
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Thumb:
            </div>
            <div class="col-7 col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Thumb))
                {
                    <img width="80" height="80" src="~/images/files/@Model.Thumb" alt="@Model.FileName" />
                }
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Mô tả:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Description" class="form-control" type="text" />
            </div>
        </div>
    </div>
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <a asp-area="Admin" asp-controller="Files" asp-action="Index" class=" btn btn-success bd-0">Xem lại danh sách</a>
        <a asp-area="Admin" asp-controller="Files" asp-action="Edit" asp-route-id="@Model.FileId" class=" btn btn-primary bd-0">Chỉnh sửa</a>
    </div>
</div>