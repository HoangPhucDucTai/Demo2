@model NewsWeb.Models.File

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Files" asp-action="Index">Danh sách thư mục</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa thư mục</li>
    </ol>
    <h6 class="slim-pagetitle">Chỉnh sửa thư mục: @Model.FileName</h6>

</div><div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Files" asp-action="Edit" asp-route-id="@Model.FileId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileId" />
            <input type="hidden" asp-for="Alias" />
            <input type="hidden" asp-for="Thumb" />
            <div class="row mg-b-25">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Tên thư mục: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="FileName">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Thư mục cha: <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="Parents" asp-items="@ViewBag.ThuMucGoc" required>
                            <option value="0" selected>Thư mục gốc</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Sắp xếp: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="number" value="0" asp-for="Ordering">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Mô tả: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Description">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Ảnh : <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <br />
                        <input type="checkbox" asp-for="Published" /><span>Active</span>
                    </div>
                </div>
                <hr />
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Tiêu đề : <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">MetaKey : <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaKey">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">MetaDesc : <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaDe">
                    </div>
                </div>
            </div>
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Lưu thay đổi</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div>
        </form>
    </div>
</div>


