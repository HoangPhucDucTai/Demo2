@model NewsWeb.Models.Document

@{
    ViewData["Title"] = "Chỉnh sửa tài liệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet" />
    <link href="~/AdminAssests/lib/select2/css/select2.min.css" rel="stylesheet" />
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Documents" asp-action="Index">Danh sách tài liệu</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa tài liệu</li>
    </ol>
    <h6 class="slim-pagetitle">Chỉnh sửa tài liệu</h6>
</div>
<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Documents" asp-action="Edit" asp-route-id="@Model.DocId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="DocId" />
            <input type="hidden" asp-for="DateCreate" />
            <input type="hidden" asp-for="Author" />
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="Thumb" />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Tiêu đề: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Mô tả ngắn: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" maxlength="254" asp-for="Scontents">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Thư mục: <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="FileId" asp-items="ViewBag.FileId" required>
                            <option label="Thư mục"></option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Ảnh : <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                    </div>
                </div>
                <hr />
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Tag : <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Tags" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label"> Tài khoản đăng: <span class="tx-danger">*</span></label>
                        <select class="form-control" id="AccountId" name="AccountId"></select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label"> Ngày tạo: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="datetime-local" asp-for="DateCreate">
                    </div>
                </div>
                <br />
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label"> Mô tả: <span class="tx-danger">*</span></label>
                        <textarea asp-for="Contents"></textarea>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" asp-for="Published"><span>Published</span>
                    </div>
                </div>
            </div>
            <div style="text-align:right !important" class="form-layout-footer">
                <button class="btn btn-primary bd-0">Lưu thay đổi</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssests/lib/select2/js/select2.min.js"></script>
    <script>

        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}

